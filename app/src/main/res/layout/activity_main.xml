<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.apiit.janith.nfcimagetranswer.MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <Button
        android:text="Load Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loadimage"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold" />
    <Button
        android:text="Load Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loadvide"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold" />
    <Button
        android:text="Compress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compress"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="normal|bold"
        android:enabled="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Encript passwaord"
        android:ems="10"
        android:id="@+id/encriptPass" />

    <Button
        android:text="Encript File"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/encript"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="normal|bold"
        android:enabled="false"/>

    <Button
        android:text="Send via NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="normal|bold"
        android:enabled="false"/>
    <Button
        android:text="Decrpt Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decript"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="normal|bold" />

    <Button
        android:text="Decrpt Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decriptvideo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="normal|bold" />


    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/image_view"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.72"
        android:enabled="false"/>

</LinearLayout>
</ScrollView>